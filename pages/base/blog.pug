mixin blog(post)
  div.blog
    h2
      - var path = post.title.replace(/[^a-zA-Z0-9]/g, '').toUpperCase()
      a(href=post.link, data-path="C:\\BLOG\\" + path.substring(0, 7) + (path.length > 7 ? "~" : "") + ".TXT")=post.title
    small.datemark
      | Created 
      = post.created
      if post.updated 
        | , updated 
        = post.updated
    p=post.teaser