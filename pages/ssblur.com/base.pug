include ../base/icon.pug

doctype html
head
  block title
    title { replace me }
  meta(name="viewport" content="width=device-width, initial-scale=1.0")
  meta(name='description' content='The home of SSBlur')
  link(href='https://fonts.googleapis.com/css?family=Quicksand' rel='stylesheet')
  link(rel='icon' href='icon.png')
  link(rel='stylesheet' href='style/font/typicons.css')
  link(rel='stylesheet' href='style/base.css')
.link-container
  .center
    a(href='/')
      img(src='icon.png' alt='SSBlur Icon: A crayon sketch of a Slowpoke in a grey hoodie')
    .quote blur
  .links
    a(href='questions.html').link Q&amp;A
    a(href='projects.html').link Projects 
    a(href='site.html').link This Site
    a(href='transparency.html').link Transparency
    .link.small-link
      .links
        .link
          a(href='https://www.youtube.com/channel/UC87-8FM-U9OSUYCzIqlhztA' title='YouTube')
            +icon('social-youtube')
        .link
          a(href='https://www.twitch.tv/ssblur' title='Twitch')
            +icon('message-typing')
        .link
          a(href='https://ssblur.tumblr.com' title='Tumblr')
            +icon('social-tumbler')
        .link
          a(href='https://github.com/ssblur' title='Github')
            +icon('social-github')
.container
  block content
    p { replace me }
  br
  br