extends ../base.pug
include ../../base/icon.pug

block title 
  title Blog

block content
  h1 The Blog&nbsp;
    a(href='/blog/feed.xml' title='RSS Feed').link
      +icon('rss')
  p This is where I put articles that don't fit cleanly into other sections of the site.
  p Sorted by recency, most recent at the top.
  each blog in blogs
    a(href=blog.link)
      div.blog
        small.datemark=blog.created
        h2=blog.title
        p=blog.teaser